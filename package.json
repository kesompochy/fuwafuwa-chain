{
  "name": "fuwafuwa-chain",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "start": "bun run ./src/index.ts",
    "build": "docker compose build",
    "dev": "docker compose up -d",
    "restart": "docker compose restart",
    "recreate": "docker compose up -d --force-recreate",
    "logs": "docker compose logs | sort -r -k 3",
    "logsf": "docker compose logs --timestamps -f",
    "stop": "docker compose stop"
  },
  "devDependencies": {
    "bun-types": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
